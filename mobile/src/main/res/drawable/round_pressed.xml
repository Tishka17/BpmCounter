<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:innerRadiusRatio="3"
            android:shape="ring"
            android:thicknessRatio="6"
            android:useLevel="false">
            <size
                android:width="120dp"
                android:height="120dp" />
            <gradient
                android:angle="315"
                android:endColor="@color/button_bg_dark"
                android:startColor="@color/button_bg_light"
                android:type="linear" />
            <padding
                android:bottom="5dip"
                android:left="5dip"
                android:right="5dip"
                android:top="5dip" />
        </shape>
    </item>

    <item>
        <shape
            android:innerRadiusRatio="3"
            android:shape="ring"
            android:thicknessRatio="6"
            android:useLevel="false">
            <size
                android:width="120dp"
                android:height="120dp" />
            <gradient
                android:angle="315"
                android:endColor="@color/button_dark"
                android:startColor="@color/button_light"
                android:type="linear" />
            <padding
                android:bottom="30dip"
                android:left="30dip"
                android:right="30dip"
                android:top="30dip" />
        </shape>
    </item>
    <item>
        <shape
            android:shape="oval"
            android:useLevel="false">
            <gradient
                android:angle="315"
                android:endColor="@color/button_light"
                android:startColor="@color/button_dark"
                android:type="linear" />
        </shape>
    </item>
</layer-list>
